<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_pptinfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/backpic"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/layout_displayCommentOfPPT"
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_label_of_comment"
        android:background="#00000000"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/main_comment_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:textColor="@color/red" >

            <requestFocus android:layout_width="wrap_content" />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_label_of_info_of_ppt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dip"
            android:layout_height="2dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#FF0000" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PPT信息"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <View
            android:layout_width="0dip"
            android:layout_height="2dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#FF0000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_label_of_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_displayIndexOfPPT"
        android:layout_below="@+id/layout_displayIndexOfPPT"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dip"
            android:layout_height="2dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#FF0000" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="备注"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <View
            android:layout_width="0dip"
            android:layout_height="2dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#FF0000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_displayIndexOfPPT"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignLeft="@+id/layout_label_of_info_of_ppt"
        android:layout_below="@+id/layout_label_of_info_of_ppt"
        android:layout_marginTop="12dp"
        android:background="#00000000"
        android:baselineAligned="false"
        android:gravity="center_vertical|center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_IndexTextViewOfPPT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:baselineAligned="false"
            android:gravity="center_vertical|center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/main_di_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:text="第  "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/main_index_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/main_ye_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:text="  页"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>